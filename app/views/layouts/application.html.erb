<!DOCTYPE html>
<html>
  <head>
    <title>Iimono</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to "ブログ投稿", blogs_path %>
      <%= link_to "ログアウト", blogs_path , method: :delete %>
    <% else %>
      <%= link_to "新規登録", blogs_path %>
      <%= link_to "ログイン", blogs_path %>
    <% end %>

    <%= yield %>
  </body>
</html>
