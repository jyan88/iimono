<!DOCTYPE html>
<html>
  <head>
    <title>いいモノマガジン（仮）</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-light bg-light navbar-fixed-top" style="background-color: white;">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
              <span class="sr-on<li>y">Bootstrap</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
              <a class="logo" href="/blogs"><img alt="いいモノマガジン（仮）" height="50" src="/logosmall.png"th="200" /></a>
           </div>
            <div id="gnavi" class="collapse navbar-collapse navbar-right">
              <ul class="nav navbar-nav">
                <li><a href="/blogs">おすすめ一覧</a></li>
                <li><%= link_to "おすすめする", new_blog_path %></li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
                <li><% if user_signed_in? %>
                <li><%= link_to "マイページ", user_path(current_user.id) %></li>
                <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
                    <% else %>
                <li><%= link_to "新規登録", new_user_registration_path %></li>
                <li><%= link_to "ログイン", new_user_session_path %></li>
                    <% end %>
              </ul>
            </div>
          </div>
        </nav>

    </header>

    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>

  <footer>
    <div class="content-block footer-bottom" id="footer">
      <div class="container">
        <div class="row">
          <div class="col-xs-6">&copy; Copyright いいモノマガジン（仮）2019</div>
          <div class="col-xs-6 text-right">Theme by いいモノ製作委員会</div>
        </div>
      </div>
    </div><!-- #footer -->
  </footer>

</html>
